{
  "name": "bynd-frontend-assessment-angular",
  "version": "1.0.0",
  "description": "BYND Frontend Angular coding assessment",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:byndops/bynd-frontend-assessment-angular.git"
  },
  "contributors": [
    "Diogo Guinapo <diogo.filipe.guinapo@gmail.com>"
  ],
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "start": "ng serve",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,md,mdx,json,yaml,yml}\"",
    "format:fix": "npm run format --write",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint ./ --ext .js,.jsx,.ts,.tsx",
    "lint:scripts:fix": "npm run lint:scripts -- --fix",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.12",
    "@angular/cdk": "18.2.13",
    "@angular/common": "^18.2.12",
    "@angular/compiler": "^18.2.12",
    "@angular/core": "^18.2.12",
    "@angular/forms": "^18.2.12",
    "@angular/material": "18.2.13",
    "@angular/platform-browser": "^18.2.12",
    "@angular/platform-browser-dynamic": "^18.2.12",
    "@angular/router": "^18.2.12",
    "@ngrx/signals": "18.1.1",
    "ng-mocks": "14.13.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "^15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "^15.2.1",
    "@angular/cli": "~18.2.12",
    "@angular/compiler-cli": "^18.2.12",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/events": "^3.0.0",
    "@types/jest": "29.5.11",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-preset-angular": "14.3.0",
    "msw": "^1.3.0",
    "prettier": "3.0.3",
    "stylelint": "15.10.3",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-prettier": "4.0.2",
    "ts-jest": "29.2.5",
    "typescript": "~5.4.5"
  },
  "msw": {
    "workerDirectory": "src"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run commitmsg"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
